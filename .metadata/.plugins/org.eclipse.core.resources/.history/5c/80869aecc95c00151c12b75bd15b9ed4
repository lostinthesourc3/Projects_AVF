var win = Ti.UI.createWindow({
	backgroundColor: "white",
	layout: "vertical"
});

var titleView = Ti.UI.createView({
	top: 20, 
	height: "30",
	backgroundColor: "#fff"
});

var title = Ti.UI.createLabel({
	text: "Current Conditions",
	font: {fontSize: "18"}
});

titleView.add(title);





win.add(titleView);
win.open();
