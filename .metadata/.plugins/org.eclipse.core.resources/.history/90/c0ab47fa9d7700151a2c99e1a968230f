var table = Ti.UI.createTableView({
	backgroundColor: "#fff",
	top: 5, 
	bottom: 5, 
	left: 10,
	right: 10, scrollable: true
});

if(Ti.Platform.name === "iPhone OS"){
	table.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
}

var tableSection = []; 
// buildUI 
var buildUI = function(movies){
	for(n in movies){
		
		var customHeader = Ti.UI.createView({
			height: 30,
			backgroundColor: "#fdfdfd"
		});
		var headerText = Ti.UI.createLabel({
			text: "Movie Theaters Near Me",
			font: {fontSize: 20, fontWeight: "bold"},
			color: "#000",
			left: 15
		});
		customHeader.add(headerText);
		
		var section = Ti.UI.createTableViewSection({
			headerView: customHeader
		});
		
		// var row = Ti.UI.createTableViewRow({
			// height: 300,
			// width: Ti.UI.FILL
		// });
// 		
		// var view = Ti.UI.createView({
			// layout: "vertical",
			// height: "100%",
			// width: "100%"
		// });
// 		
		// var nameTxt = Ti.UI.createLabel({
			// top: 10, 
			// text: movies[n].name,
			// font: {fontSize: 20, fontColor: "#000", fontWeight: "bold"}
		// });
// 		
// 		
		// view.add(nameTxt);
		// row.add(view);
		// data.push(row);
	}
	
	table.setData(tableSection);
	table.add(tableSection);
	win.add(table);
	win.add(section);
};





