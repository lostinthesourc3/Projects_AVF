var read = function(){
	var db = Ti.Database.open("stockDB");
	db.execute("CREATE TABLE IF NOT EXISTS stockTBL (id INTEGER PRIMARY KEY, name TEXT, phone TEXT, address TEXT)");
	var dbResult = db.execute("SELECT * FROM stockTBL");
	var info = [];	
		while (dbResult.isValidRow()){
		var localData = {
			name: dbResult.fieldByName("name"),
			phone: dbResult.fieldByName("phone"),
			address: dbResult.fieldByName("address"),
			//crossStreet: dbResult.fieldByName("crossStreet"),
		};
		dbResult.next();
	}

	dbResult.close();
	db.close();
	console.log(localData);
	var ui = require("ui");
	ui.buildUI(info);
};

var save = function(savedData){
	console.log(savedData);
	var db = Ti.Database.open("stockDB");
	db.execute("CREATE TABLE IF NOT EXISTS stockTBL (id INTEGER PRIMARY KEY, name TEXT, phone TEXT, address TEXT)");
	db.execute("DELETE FROM stockTBL");
	db.execute("INSERT INTO stockTBL (name, phone, address) VALUES (?, ?, ?, )", savedData.name, savedData.phone, savedData.address);
	db.close();
	read(); 
};

exports.save = save;
//exports.read = read;