var win = Ti.UI.createWindow({
	backgroundColor: "white",
	layout: "vertical"
});

var titleView = Ti.UI.createView({
	top: 20, 
	height: 30,
	backgroundColor: "#fff"
});
var title = Ti.UI.createLabel({
	text: "Current Conditions",
	font: {fontSize: 18}
});
titleView.add(title);

var locName = Ti.UI.createView({
	top: 40,
	height: 40,
	width: "50%",
	left: 10
});
var locNameText = Ti.UI.createLabel({
	text: "City, State",
	font: {fontSize: 30, fontFamily: "Roboto", fontWeight: "bold"}
});
locName.add(locNameText); 



win.add(titleView, locName);
win.open();
