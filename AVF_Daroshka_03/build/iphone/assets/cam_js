Titanium.Media.showCamera({success:function(e){if(Ti.API.debug("Our type was: "+e.mediaType),e.mediaType==Ti.Media.MEDIA_TYPE_PHOTO){var i=Ti.UI.createImageView({width:win.width,height:win.height,image:e.media});win.add(i)}else alert("got the wrong type back ="+e.mediaType)},cancel:function(){},error:function(e){var i=Titanium.UI.createAlertDialog({title:"Camera"});e.code==Titanium.Media.NO_CAMERA?i.setMessage("Please run this test on device"):i.setMessage("Unexpected error: "+e.code),i.show()},saveToPhotoGallery:!0,allowEditing:!0,mediaTypes:[Ti.Media.MEDIA_TYPE_VIDEO,Ti.Media.MEDIA_TYPE_PHOTO]});